<!DOCTYPE html>
<html>
<head>
  <title>Fp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar my-nav" role="navigation">
    <div class="container-fluid ">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="#">SketchMate</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user"></span> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%=link_to "Profile", user_url(current_user)%></li>
            <li class="divider"></li>
            <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
          </ul>
        </li>

                <% else %>


                  <li>
                    <button class="btn btn-default navbar-btn"
                            data-toggle="modal"
                            data-target=".bs-example-modal-sm"
                            style="border-radius: 5px 0px 0px 5px">
                      Sign In
                    </button>
                  </li>

                  <div class="modal fade bs-example-modal-sm"
                      tabindex="-1"
                      role="dialog"
                      aria-labelledby="mySmallModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                          <div class="modal-body">
                            <%= render "sessions/form", :user => @user %>
                           </div>
                         </div>
                      </div>
                    </div>

                  <li><%= button_to "Sign up", new_user_url, :method => :get, :class => "btn btn-default navbar-btn", :style => "border-radius: 0px 5px 5px 0px;"%></li>

                <% end %>
    

  </div>
</nav>



<% if alert %>
    <div class="alert alert-success col-xs-4 col-xs-offset-3s">
      <%= alert %>
    <button type="button" class="close" data-dismiss="alert">      
      <span class="glyphicon glyphicon-remove"></span>    
    </button>  
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success col-xs-4 col-xs-offset-3s">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert">
      <span class="glyphicon glyphicon-remove"></span>
    </button>
  </div>
<% end %>

<% if flash[:errors] %>
  <div class="alert alert-danger">
    <h3>Dammit. Get it together!</h3>
    <ul>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= yield %>

</body>
</html>
