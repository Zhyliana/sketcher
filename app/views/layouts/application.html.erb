<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag %>
  <title>SketchMate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse my-nav" role="navigation">
    <div class="container-fluid ">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="#" id="logo-thumb"><%= image_tag "logo-thumb.png"%></a>
        <a class="navbar-brand" href="#" id="logo-text">SketchMate</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
          <%= render "layouts/nav_btns" %>
           <% if user_signed_in? %>
            <%= render "api/white_cards/new" %>
           <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= render "layouts/user_nav" %>
          <% else %>
            <%= render "layouts/sign_in_up_modal" %>           
          <% end %>
        </ul><!-- navbar-right -->
     </div><!-- navbar-collapse -->
  </div><!-- container-fluid-->
</nav>

<% if notice %>
 <% render "layouts/messages"%>
<% end %>


<%= yield %>

</body>
</html>
