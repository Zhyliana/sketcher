  <div class="alert alert-success col-xs-4 col-xs-offset-3s">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert">
      <span class="glyphicon glyphicon-remove"></span>
    </button>
  </div>
<% end %> -->

<% if flash[:errors] %>
  <div class="alert alert-danger">
    <h3>Dammit. Get it together!</h3>
    <ul>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= yield %>

</body>
</html>
