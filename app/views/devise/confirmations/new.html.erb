<div class="container col-xs-4 col-xs-offset-3">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), class: "form-inline", html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

      <div class="form-group has-error has-feedback">
        <div><%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %></div>
        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
      </div>

    <div>
      <%= f.submit "Sign in", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>