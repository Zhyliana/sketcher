<form id="new-card navbar-form pull-right"> 
  <label class="form-group">
    <input type="text" 
           class="form-control" 
           name="white_card[body]" 
           autofocus="true"
           placeholder="Think you're witty?"></input>
  </label>

  <div>
    <input type="submit" class="navbar-btn"></button>
  </div>
</form>

<script>
$(function() {
  $("#new-card").on("submit", function (event) {
      event.preventDefault();

      var formData = $(this).serializeJSON();

      $.ajax({
        url: "/api/white_cards",
        type: "POST",
        data: formData,
        success: function () {
        }
      });
    }
  );
});
</script>
